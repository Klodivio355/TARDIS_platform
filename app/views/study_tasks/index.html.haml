-# Display tasks allocated to a specific study
-# Author: Maxime Fontana, Michael Vickers, Krusha Vekaria, Apoorva Singh
-# Date: 03/2020

.grouping
  %h1 Tasks Allocated to a Study
  .scrollable
    %table.table.table-bordered.table-hover
      %thead
        %tr
          %th ID
          %th Name
          %th Study
          %th Lead DM Hours
          %th Backup DM Hours
          %th Year
          %th Month
          %th Complete


      %tbody
        - @study_tasks.each do |study_task|
          %tr
            %td= study_task.task_id
            %td= study_task.task_name
            %td= study_task.study_id
            %td= study_task.lead_hours_worked
            %td= study_task.backup_hours_worked
            %td= study_task.year
            %td= study_task.month
            %td= study_task.complete
            %td= link_to 'Edit', edit_study_task_path(study_task)
            -#%td= link_to 'Destroy', study_task, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Study task', new_study_task_path
