!!!
%html
  %head
    %title TardisProject - #{content_for(:title)}
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %meta{ :'http-equiv' => 'X-UA-Compatible', content: 'IE=edge' }
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}
    = stylesheet_link_tag    "application", media: :all
    = javascript_include_tag "application"
    = favicon_link_tag '/favicon.ico'
    = csrf_meta_tags

  %body{ class: environment_notice_body_class }
    = render 'layouts/environment_notice'
    .flash-messages
      - flash.each do |name, msg|
        - next unless name == 'alert' || name == 'notice'
        .alert.fade.in
          .container
            - if name == 'notice'
              = icon('fas', 'check', class: 'flash-success')
            - else
              = icon('fas', 'exclamation-triangle', class: 'flash-error')
            = msg
            %a{ href: '#', title: 'Hide this message', data: { dismiss: :alert } } Dismiss

    #wrap
      %header

        .head-div.bg-grey
          Clinical Trials Research Unit


        %nav#main-nav.bg-grey.navbar.navbar-dark.navbar-expand-lg
          .container
            .navbar-header
              = link_to :root, class: 'navbar-brand hidden-sm' do
                TardisProject
            %button.navbar-toggler{ aria: { controls: "navbar-content", expanded: false, label: "Toggle navigation" }, data: { target: "#navbar-content", toggle: "collapse" }, type: "button" }
              %span.navbar-toggler-icon

            .collapse.navbar-collapse#navbar-content
              %ul.nav.navbar-nav
                -#= navbar_link_to :root, title: "Go to the home page", identifier: :home do
                  -#= icon 'fas', 'home'
                  -#Home

                - if current_user
                  = navbar_link_to 'studies', title: "View Study List", identifier: :study_list do
                    = icon 'fas', 'study_list'
                    Studies

                  - if current_user.admin
                    = navbar_link_to 'study_hours_timeline', title: "View Lead & Backup DM Hours Per Month", identifier: :study_hours_timeline do
                      = icon 'fas', 'study_hours_timeline'
                      Study Hours

                    = navbar_link_to 'task_lists', title: "View Available Tasks & Details", identifier: :task_list do
                      = icon 'fas', 'task_list'
                      Tasks

                    = navbar_link_to 'month_timeline', title: "View Month Timeline For All Studies", identifier: :months_timeline do
                      = icon 'fas', 'months_timeline'
                      Month Timeline

                    = navbar_link_to 'data_managers', title: "Manage All Data Managers", identifier: :all_managers do
                      = icon 'fas', 'all_managers'
                      Data Managers

                    = navbar_link_to 'manager_hours', title: "View Data Manager Working Hours", identifier: :manager_working_hours do
                      = icon 'fas', 'manager_working_hours'
                      Manager Hours

                  - else
                    = navbar_link_to 'dm_studies', title: "Getting Study Lists", identifier: :dm_studies_lists do
                      = icon 'fas', 'dm_studies_lists'
                      Current Studies

                    = navbar_link_to 'dm_hours', title: "Getting own hours", identifier: :dm_hours_lists do
                      = icon 'fas', 'dm_hours_lists'
                      Hours Worked





                  -#= navbar_link_to 'add_users', title: "Add Data Managers", identifier: :add_users do
                    -#= icon 'fas', 'add_users'
                    -#Add Users

              - if user_signed_in?
                %ul.nav.navbar-nav.ml-auto
                  %li.nav-item.dropdown
                    = link_to '#', aria: { haspopup: true, expanded: false }, data: { toggle: :dropdown }, id: 'navbar-users-link', class: 'nav-link dropdown-toggle', role: 'button' do
                      = icon 'fas', 'users', current_user.email
                      %b.caret
                    .dropdown-menu{ aria: { labelledby: '#navbar-users-link' } }
                      = link_to destroy_user_session_path, class: 'dropdown-item', method: :delete, title: "Log out of the system" do
                        = icon 'fas', 'sign-out-alt', 'Log out'

      %main
        #main-container
          = yield

    %footer#footer
      .container
        %p
          &copy; #{Date.today.year}
          = link_to 'epiGenesys', 'https://www.epigenesys.org.uk', target: '_blank', title: 'Go to the epiGenesys website'
